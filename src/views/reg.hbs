<link rel="stylesheet" href="reg.css">
<div>
    <nav class="navbar  mt-2">
        <div class="row head_op"> r
            <a href="/form" class="add_head material-icons iconadd">note_add</a>
        </div>
        <form class="form-inline">


            <div class="input-group" style="background: white;border-radius: 2em;padding: 3px;">

                <input class="form-control mr-sm-2" style="border: none;border-radius: 2em;" type="search"
                    id="search_input" placeholder="Buscar" aria-label="Buscar">
                <div class="">
                    <i class="material-icons search_icon">search</i>
                </div>
            </div>
        </form>
    </nav>
    <table class="table table-striped w-80 rounded ">
        <thead>
            <form action="/deleteSelect" method="POST">
                <tr>
                    <th></th>
                    <th>
                        <p class="material-icons icongira">dns</p>
                    </th>
                    <th>
                        MNF
                        <p class="material-icons icongira" onclick="SortHead(2)">arrow_drop_up</p>
                    </th>
                    <th>
                        Titulo
                        <p class="material-icons icongira" onclick="SortHead(3)">arrow_drop_up</p>
                    </th>
                    <th>
                        Autor
                        <p class="material-icons icongira" onclick="SortHead(4)">arrow_drop_up</p>
                    </th>
                    <th>
                        Editorial
                        <p class="material-icons icongira" onclick="SortHead(5)">arrow_drop_up</p>
                    </th>
                    <th>
                        Tipo de Entrada
                        <p class="material-icons icongira" onclick="SortHead(6)">arrow_drop_up</p>
                    </th>
                    <th></th>
                </tr>
        </thead>
        <tbody id="tbody">
            {{#each book}}
            <tr>
                <td></td>
                <td>
                    <a href="/reg{{this.id}}" id="edit" class="material-icons">edit</a>
                    <a href="/reg/eliminar/{{this.id}}" id="del" class="material-icons">delete</a>
                </td>
                <td>{{id}}</td>
                <td>{{titulo}}</td>
                <td>{{autor}}</td>
                <td>{{editorial}}</td>
                <td>{{tipoIN}}</td>
                <td></td>
            </tr>
            {{/each}}
        </tbody>
        </form>
    </table>
</div>
<script src="reg.js"></script>